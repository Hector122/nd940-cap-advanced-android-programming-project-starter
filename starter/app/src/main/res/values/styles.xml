<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- completed: Add necessary styles -->
    <style name="TextElectionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_item_title</item>
    </style>

    <style name="TextElectionSubtitle" parent="TextElectionTitle">
        <item name="android:textStyle" />
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_size_item_subtitle</item>
    </style>


    <style name="TextElectionSubtitleClickable" parent="TextElectionSubtitle">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TextElectionTitleHeader" parent="TextElectionTitle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

    <!--parent="Widget.MaterialComponents.Button" -->
    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ButtonStyleRepresentative" parent="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/button_margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/button_margin_large</item>
    </style>

    <style name="ImageURlRepresentative">
        <item name="android:layout_width">@dimen/image_size_representative_url</item>
        <item name="android:layout_height">@dimen/image_size_representative_url</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>
